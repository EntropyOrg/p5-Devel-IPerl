#!/bin/sh

if which scan-prereqs-cpanfile 2>&1 >/dev/null; then
	echo "# Generated by scan-prereqs-cpanfile. DO NOT EDIT!" > cpanfile
	scan-prereqs-cpanfile | grep -v "requires 'IPerl'" >> cpanfile
	cat <<CPANFILE >> cpanfile

if( $^O eq 'MSWin32' ) {
    requires 'Alien::ZMQ::latest';
}
CPANFILE
fi

true
